{
  "name": "serverpod",
  "displayName": "Serverpod",
  "publisher": "Serverpod",
  "description": "Serverpod for VS code, manage your projects and get code feedback in real time.",
  "icon": "assets/icons/icon.png",
  "galleryBanner": {
    "color": "#020E24",
    "theme": "dark"
  },
  "version": "1.2.6",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "activationEvents:serverpod"
  ],
  "pricing": "Free",
  "homepage": "https://serverpod.dev",
  "bugs": {
    "url": "https://github.com/serverpod/serverpod/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serverpod/serverpod.git"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "serverpod",
        "aliases": [
          "Serverpod yaml",
          "Spy"
        ],
        "extensions": [
          ".spy.yaml",
          ".spy.yml",
          ".spy"
        ],
        "configuration": "./syntaxes/language-configuration.json",
        "icon": {
          "light": "./assets/icons/icon.png",
          "dark": "./assets/icons/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "serverpod",
        "scopeName": "source.serverpod",
        "path": "./syntaxes/serverpod.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "publish-vscode": "vsce publish",
    "publish-openvsx": "osvx publish",
    "build": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "24.7.1",
    "@types/semver": "^7.7.1",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.75.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.37.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.2",
    "ovsx": "^0.10.5",
    "sinon": "^21.0.0",
    "typescript": "~5.5.0"
  }
}
